<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayoutContent"
    >

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imgRecyclerRowIcon"
        android:src="@drawable/ic_book_icon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRecyclerRowTitle"
        android:layout_toEndOf="@id/imgRecyclerRowIcon"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="@string/list_item"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRecyclerRowAuthor"
        android:padding="10dp"
        android:text="@string/author_name"
        android:layout_toEndOf="@id/imgRecyclerRowIcon"
        android:layout_below="@id/txtRecyclerRowTitle"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRecyclerRowPrice"
        android:text="@string/list_price"
        android:padding="10dp"
        android:layout_toEndOf="@id/imgRecyclerRowIcon"
        android:layout_below="@id/txtRecyclerRowAuthor"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgRecyclerRowRating"
        android:src="@drawable/ic_list_rating"
        android:layout_toStartOf="@+id/txtRecyclerRowRating"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRecyclerRowRating"
        android:text="@string/list_rating"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        />


</RelativeLayout>